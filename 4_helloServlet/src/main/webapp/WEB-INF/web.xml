<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>4_helloServlet</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- servletContext에 값을 저장하자 -->
  <context-param>
  	<param-name>driver</param-name>
  	<param-value>org.mariadb.jdbc.Driver</param-value>
  </context-param>
  
  <!-- url mapping하기 -->
  <!-- servlet 태그는 서블릿으로 사용할 클래스를 등록 -->
  <servlet>
  	<servlet-name>HelloServletOld</servlet-name>
  	<servlet-class>com.hk.hello.HelloServletOld</servlet-class>
  	<init-param>
  		<param-name>id</param-name>
  		<param-value>hk</param-value>
  	</init-param>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>HelloServletOld</servlet-name>
  	<url-pattern>/HelloServletOld.do</url-pattern>
  </servlet-mapping>
