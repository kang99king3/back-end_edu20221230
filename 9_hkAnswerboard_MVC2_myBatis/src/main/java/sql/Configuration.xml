<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<!-- 	DB 접속 정보 파일의 경로 설정 -->
  <properties resource="sql/db.properties" />
  
<!-- dto 객체의 변수설정  -->
  <typeAliases>
  	<typeAlias type="com.hk.dtos.AnsDto" alias="ansDto"/>
<!--   	<typeAlias type="com.hk.dtos.HkDto2" alias="hkDto2"/> -->
<!--   	<typeAlias type="com.hk.dtos.HkDto3" alias="hkDto3"/> -->
  </typeAliases>

<!-- DB접속 정보 셋팅 -->
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
<!--   쿼리가 작성되어 있는 mapper.xml의 경로 설정 -->
  <mappers>
    <mapper resource="sql/BoardMapper.xml"/>
<!--     <mapper resource="sql/BoardMapper2.xml"/> -->
<!--     <mapper resource="sql/BoardMapper3.xml"/> -->
  </mappers>
</configuration>



